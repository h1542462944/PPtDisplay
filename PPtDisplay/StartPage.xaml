<Page x:Class="PPtDisplay.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPtDisplay"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">
    <Grid x:Name="GridMain" Background="#ff8e2f0e">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid x:Name="GridTitle" Background="Transparent">
            <TextBlock Text="PPtDisplay" Foreground="White" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </Grid>
        <TextBlock Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Assets/#Segoe MDL2 Assets" Text="&#xe8ae;" Foreground="White" FontSize="130"/>
    </Grid>
</Page>
